<div class="row">
  <div id="clearance" class="password-reset small-5 medium-5 vertical">
    <h2><%= t(".title") %></h2>

    <p><%= t(".description") %></p>

    <%= form_for :password, url: passwords_path do |form| %>
      <div class="text-field">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email' %>
      </div>

      <div class="submit-field">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
